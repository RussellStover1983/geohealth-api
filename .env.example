# =============================================================================
# GeoHealth API — Environment Configuration
# =============================================================================
# Copy this file to .env and fill in values.
# WARNING: Never commit .env to version control — it contains secrets.
# =============================================================================

# --- Database ----------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://geohealth:geohealth@localhost:5432/geohealth
DATABASE_URL_SYNC=postgresql://geohealth:geohealth@localhost:5432/geohealth

# --- Geocoding ---------------------------------------------------------------
CENSUS_GEOCODER_URL=https://geocoding.geo.census.gov/geocoder/geographies/onelineaddress
NOMINATIM_URL=https://nominatim.openstreetmap.org/search

# --- CORS --------------------------------------------------------------------
# PRODUCTION: Replace with your actual frontend origin(s), comma-separated.
# Do NOT use "*" in production — it allows any origin to make requests.
CORS_ORIGINS=http://localhost:3000

# --- External API keys -------------------------------------------------------
# These are secrets — never commit real values.
CENSUS_API_KEY=
SOCRATA_APP_TOKEN=
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=
NARRATIVE_MAX_TOKENS=

# --- Cache -------------------------------------------------------------------
CACHE_MAXSIZE=
CACHE_TTL=

# --- Authentication ----------------------------------------------------------
# PRODUCTION: Set AUTH_ENABLED=true and provide API_KEYS.
AUTH_ENABLED=false
# API_KEYS accepts plaintext keys or pre-hashed SHA-256 hex digests (64 chars).
# Generate a hash: python -c "import hashlib; print(hashlib.sha256(b'my-secret-key').hexdigest())"
API_KEYS=

# --- Rate Limiting -----------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_WINDOW=60

# --- Batch -------------------------------------------------------------------
BATCH_MAX_SIZE=50
